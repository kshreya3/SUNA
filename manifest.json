{
  "manifest_version": 3,
  "name": "SUNA — Simplify, Understand, Navigate, Assist",
  "short_name": "SUNA",
  "version": "2.0.0",
  "description": "Assistive browsing using Chrome’s built-in AI APIs. Dual UI (popup + floating panel).",
  "action": {
    "default_title": "SUNA",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": ["activeTab","scripting","storage","tts","tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": { "default": "Alt+E" },
      "description": "Toggle the SUNA floating panel on the current page"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/content.css"],
      "js": ["content/content.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}